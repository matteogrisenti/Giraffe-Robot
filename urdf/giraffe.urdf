<?xml version="1.0"?>
<robot name="giraffe_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="world"/>

  <!-- Floor -->
  <link name="floor">
    <visual>
      <geometry>
        <box size="5 12 0.1"/>
      </geometry>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link> 
  <joint name="floor_fixed" type="fixed">
    <parent link="world"/>
    <child link="floor"/>
    <origin xyz="2.5 6 0" rpy="0 0 0"/>
  </joint>

  <!-- Ceiling -->
  <link name="ceiling">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="5 12 0.1"/>
      </geometry>
      <material name="ceiling_color">
        <color rgba="0.8 0.8 0.8 0.5"/>
      </material>
    </visual>
  </link>
  <joint name="ceiling_fixed" type="fixed">
    <parent link="floor"/>
    <child link="ceiling"/>
    <origin xyz="0 0 4.05" rpy="0 0 0"/>
  </joint>

  <!-- Base link (ceiling-mounted) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.4 0.1"/>
      </geometry>
      <origin xyz="0 20 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
  </link>
  <joint name="base_link_fixed" type="fixed">
    <parent link="ceiling"/>
    <child link="base_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
  </joint>

  <!-- Spherical joint: yaw -->
  <joint name="yaw_joint" type="revolute">
    <parent link="base_link"/>
    <child link="yaw_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <limit effort="10" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>

  <link name="yaw_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1"/>
      </material>
    </visual>
  </link>

  <!-- Spherical joint: pitch -->
  <joint name="pitch_joint" type="revolute">
    <parent link="yaw_link"/>
    <child link="pitch_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="pitch_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1"/>
      </material>
    </visual>
  </link>

  <!-- Prismatic joint (vertical drop) -->
  <joint name="extend_joint" type="prismatic">
    <parent link="pitch_link"/>
    <child link="extend_link"/>
    <axis xyz="0 0 -1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <limit effort="50" velocity="0.5" lower="0" upper="3.0"/>
  </joint>

  <link name="extend_link">
    <visual>
      <geometry>
        <cylinder length="3.0" radius="0.03"/>
      </geometry>
      <origin xyz="0 0 -1.5" rpy="0 0 0"/>
      <material name="orange">
        <color rgba="1 0.5 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Revolute joint 1: pitch for microphone -->
  <joint name="mic_pitch_joint" type="revolute">
    <parent link="extend_link"/>
    <child link="mic_pitch_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 -3.0" rpy="0 0 0"/>
    <limit effort="5" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="mic_pitch_link">
    <visual>
      <geometry>
        <box size="0.1 0.05 0.3"/>
      </geometry>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Revolute joint 2: roll for microphone -->
  <joint name="mic_roll_joint" type="revolute">
    <parent link="mic_pitch_link"/>
    <child link="mic_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    <limit effort="5" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>

  <!-- Microphone end-effector -->
  <link name="mic_link">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 -0.075" rpy="0.523 0 0"/> <!-- ~30Â° pitch -->
      <material name="black"/>
    </visual>
  </link>

</robot>