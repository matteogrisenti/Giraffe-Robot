<?xml version="1.0"?>
<robot name="giraffe_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="pi" value="3.141592653589793"/>
  <xacro:property name="pi_2" value="1.5707963267948966"/>

  <link name="world"/>

  <!-- Floor -->
  <link name="floor">
    <visual>
      <geometry>
        <box size="5 12 0.1"/>
      </geometry>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link> 
  <joint name="floor_fixed" type="fixed">
    <parent link="world"/>
    <child link="floor"/>
    <origin xyz="2.5 6 0" rpy="0 0 0"/>
  </joint>

  <!-- Ceiling -->
  <link name="ceiling">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="5 12 0.1"/>
      </geometry>
      <material name="ceiling_color">
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
  </link>
  <joint name="ceiling_fixed" type="fixed">
    <parent link="floor"/>
    <child link="ceiling"/>
    <origin xyz="0 0 4.05" rpy="0 0 0"/>
  </joint>

  <!-- Base link (ceiling-mounted) -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://ur_description/meshes/ur5/collision/base.stl"/>
      </geometry>
      <material name="LightGrey">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://ur_description/meshes/ur5/collision/base.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="4.0"/>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <inertia ixx="0.00443333156" ixy="0.0" ixz="0.0" iyy="0.00443333156" iyz="0.0" izz="0.0072"/>
    </inertial>
  </link>
  <joint name="base_link_fixed" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="2.5 6 4" rpy="${pi} 0 ${pi_2}"/>
  </joint>

  <!-- Shoulder joint 1: revolute yaw -->
  <joint name="shoulder_yaw_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0.0 0.0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${pi}" upper="${pi}" effort="50.0" velocity="1.5"/>
  </joint>

  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/> 
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0.4 0.6 1.0 1"/>
      </material>
    </visual>
  </link>


  <!-- Spherical joint 2: pitch pitch -->
  <joint name="shoulder_pitch_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="pitch_link"/>
    <origin rpy="${pi_2} 0.0 0.0" xyz="0.0 0.0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit effort="150.0" lower="0" upper="${pi}" velocity="3.15"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>


  <link name="pitch_link"> 
    <!-- Visuals for the shoulder_pitch_joint link -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/> <!-- verde acceso -->
      </material>
    </visual>

    <!-- Orizzontale: cilindro disteso lungo X -->
    <visual>
      <origin xyz="1.25 0 0" rpy="0 ${pi_2} 0"/> <!-- ruota per allineare asse lungo X -->
      <geometry>
        <cylinder length="2.5" radius="0.05"/>
      </geometry>
      <material name="metal">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>

    <!-- Visuals for the prismatic joint -->
    <visual>
      <origin xyz="2.4 0.1 0" rpy="0 0 0"/> 
      <geometry>
        <box size="0.2 0.1 0.1"/>
      </geometry>
      <material name="orange">
        <color rgba="1 0.5 0 1"/>
      </material>
    </visual>
  </link>


  <!-- Prismatic joint (vertical drop) -->
  <joint name="prismatic_joint" type="prismatic">
    <parent link="pitch_link"/>
    <child link="extend_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="2.4 0.1 0" rpy="0 ${pi_2} 0"/>
    <limit effort="50" velocity="0.5" lower="0" upper="4"/>
  </joint>


  <link name="extend_link">
    <visual>
      <geometry>
        <cylinder length="4.5" radius="0.03"/>
      </geometry>
      <origin xyz="0 0 -2.05" rpy="0 0 0"/>
      <material name="metal"/>
    </visual>
  </link>


  <!-- Spherical joint 2: roll for microphone -->
  <joint name="mic_roll_joint" type="revolute">
    <parent link="extend_link"/>
    <child link="forearm_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.2" rpy="${pi} -${pi_2} 0"/>
    <limit effort="5" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="forearm_link">
    <!-- Visuals for the mic_roll_joint link -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.06"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/> <!-- verde acceso -->
      </material>
    </visual>

    <!-- Orizzontale: cilindro disteso lungo X -->
    <visual>
      <geometry>
        <cylinder length="1" radius="0.03"/>
      </geometry>
      <origin xyz="0.5 0 0" rpy="0 ${pi_2} 0"/>
      <material name="metal"/>
    </visual>

    <!-- Visuals for the mic_yaw_joint link -->
    <visual>
      <origin xyz="1.03 0 0" rpy="0 ${pi_2} 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.06"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- Revolute joint 2: yaw for microphone -->
  <joint name="mic_yaw_joint" type="revolute">
    <parent link="forearm_link"/>
    <child link="mic_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="1.03 0 0" rpy="-${pi_2} 0 -${pi_2}"/>
    <limit effort="5" velocity="1.0" lower="-3.14" upper="3.14"/>
  </joint>

  <!-- Microphone end-effector -->
  <link name="mic_link">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.01"/>
      </geometry>
      <origin xyz="0.075 0 0" rpy="0 -${pi_2} 0"/> 
      <material name="metal"/>
    </visual>
  </link>

  <joint name="mic_fixed" type="fixed">
    <parent link="mic_link"/>
    <child link="mic"/>
    <origin xyz="0.15 0 0" rpy="0 ${pi_2} 0"/>
  </joint>

  <!-- Microphone end-effector -->
  <link name="mic">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

</robot>